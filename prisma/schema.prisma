generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  password      String
  phoneNumber   String
  weiboLink     String
  qq            String
  email         String
  avatarLink    String
  linkedUserId  Int
  isCV          Boolean
  isStaff       Boolean
  sex           String
  voiceType     String
  soundPressure String
  demoLink      String
  description   String
  genre         String[]
  functionType  String[]
}
