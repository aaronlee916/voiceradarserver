generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int    @id @default(autoincrement())
  name            String
  sex             String
  password        String
  phoneNumber     String
  UserDescription String
  email           String
  avatarLink      String
}

model Artist {
  id                Int            @id @default(autoincrement())
  weiboLink         String
  qq                String
  isCV              Boolean
  isStaff           Boolean
  voiceType         String
  soundPressure     String
  demoLink          String
  artistDescription String
  genre             Genre[]
  functionType      functionType[]
}

model Genre {
  id       Int     @id @default(autoincrement())
  genre    String
  Artist   Artist? @relation(fields: [artistId], references: [id])
  artistId Int?
}

model functionType {
  id           Int     @id @default(autoincrement())
  functionType String
  Artist       Artist? @relation(fields: [artistId], references: [id])
  artistId     Int?
}
