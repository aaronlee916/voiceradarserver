generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model artist {
  id                Int            @id @default(autoincrement())
  weiboLink         String
  qq                String
  isCV              Boolean
  isStaff           Boolean
  voiceType         String
  soundPressure     String
  demoLink          String
  artistDescription String
  functiontype      functiontype[]
  genre             genre[]
}

model functiontype {
  id           Int     @id @default(autoincrement())
  functionType String
  artistId     Int?
  artist       artist? @relation(fields: [artistId], references: [id], map: "functionType_artistId_fkey")

  @@index([artistId], map: "functionType_artistId_fkey")
}

model genre {
  id       Int     @id @default(autoincrement())
  genre    String
  artistId Int?
  artist   artist? @relation(fields: [artistId], references: [id], map: "Genre_artistId_fkey")

  @@index([artistId], map: "Genre_artistId_fkey")
}

model user {
  id              Int    @id @default(autoincrement())
  name            String
  sex             String
  password        String
  phoneNumber     String
  UserDescription String
  email           String
  avatarLink      String
}
